        android:layout_height="wrap_content"
        android:text="@string/versn"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="16sp"
        android:id="@+id/te1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developed"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp"/>
    </LinearLayout>
